<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="background">
        <attr name="yx_shape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

        <attr name="yx_solid_color" format="color" />

        <attr name="yx_corners_radius" format="dimension" />
        <attr name="yx_corners_bottomLeftRadius" format="dimension" />
        <attr name="yx_corners_bottomRightRadius" format="dimension" />
        <attr name="yx_corners_topLeftRadius" format="dimension" />
        <attr name="yx_corners_topRightRadius" format="dimension" />

        <attr name="yx_gradient_angle" format="integer" />
        <attr name="yx_gradient_centerX" format="float" />
        <attr name="yx_gradient_centerY" format="float" />
        <attr name="yx_gradient_centerColor" format="color" />
        <attr name="yx_gradient_endColor" format="color" />
        <attr name="yx_gradient_startColor" format="color" />
        <attr name="yx_gradient_gradientRadius" format="dimension" />
        <attr name="yx_gradient_type" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>
        <attr name="yx_gradient_useLevel" format="boolean" />

        <attr name="yx_padding_left" format="dimension" />
        <attr name="yx_padding_top" format="dimension" />
        <attr name="yx_padding_right" format="dimension" />
        <attr name="yx_padding_bottom" format="dimension" />

        <attr name="yx_size_width" format="dimension">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>
        <attr name="yx_size_height" format="dimension">
            <enum name="wrap_content" value="-2" />
            <enum name="match_parent" value="-1" />
        </attr>

        <attr name="yx_stroke_width" format="dimension" />
        <attr name="yx_stroke_color" format="color" />
        <attr name="yx_stroke_dashWidth" format="dimension" />
        <attr name="yx_stroke_dashGap" format="dimension" />

        <!--以下是selector事件-->
        <attr name="yx_checkable_stroke_color" format="color" />
        <attr name="yx_checked_stroke_color" format="color" />
        <attr name="yx_enabled_stroke_color" format="color" />
        <attr name="yx_selected_stroke_color" format="color" />
        <attr name="yx_pressed_stroke_color" format="color" />
        <attr name="yx_focused_stroke_color" format="color" />

        <attr name="yx_unCheckable_stroke_color" format="color" />
        <attr name="yx_unChecked_stroke_color" format="color" />
        <attr name="yx_unEnabled_stroke_color" format="color" />
        <attr name="yx_unSelected_stroke_color" format="color" />
        <attr name="yx_unPressed_stroke_color" format="color" />
        <attr name="yx_unFocused_stroke_color" format="color" />

        <attr name="yx_checkable_solid_color" format="color" />
        <attr name="yx_checked_solid_color" format="color" />
        <attr name="yx_enabled_solid_color" format="color" />
        <attr name="yx_selected_solid_color" format="color" />
        <attr name="yx_pressed_solid_color" format="color" />
        <attr name="yx_focused_solid_color" format="color" />

        <attr name="yx_unCheckable_solid_color" format="color" />
        <attr name="yx_unChecked_solid_color" format="color" />
        <attr name="yx_unEnabled_solid_color" format="color" />
        <attr name="yx_unSelected_solid_color" format="color" />
        <attr name="yx_unPressed_solid_color" format="color" />
        <attr name="yx_unFocused_solid_color" format="color" />

        <attr name="yx_stroke_position" format="flags">
            <flag name="left" value="2" />
            <flag name="top" value="4" />
            <flag name="right" value="8" />
            <flag name="bottom" value="16" />
        </attr>
    </declare-styleable>

    <declare-styleable name="background_press">
        <attr name="yx_unpressed_color" format="color" />
        <attr name="yx_pressed_color" format="color" />
    </declare-styleable>

    <declare-styleable name="background_selector">

        <attr name="yx_checkable_drawable" format="color|reference" />
        <attr name="yx_checked_drawable" format="color|reference" />
        <attr name="yx_enabled_drawable" format="color|reference" />
        <attr name="yx_selected_drawable" format="color|reference" />
        <attr name="yx_pressed_drawable" format="color|reference" />
        <attr name="yx_focused_drawable" format="color|reference" />
        <attr name="yx_focused_hovered" format="color|reference" />
        <attr name="yx_focused_activated" format="color|reference" />

        <attr name="yx_unCheckable_drawable" format="color|reference" />
        <attr name="yx_unChecked_drawable" format="color|reference" />
        <attr name="yx_unEnabled_drawable" format="color|reference" />
        <attr name="yx_unSelected_drawable" format="color|reference" />
        <attr name="yx_unPressed_drawable" format="color|reference" />
        <attr name="yx_unFocused_drawable" format="color|reference" />
        <attr name="yx_unFocused_hovered" format="color|reference" />
        <attr name="yx_unFocused_activated" format="color|reference" />

    </declare-styleable>

    <declare-styleable name="background_multi_selector">
        <attr name="yx_multi_selector1" format="string" />
        <attr name="yx_multi_selector2" format="string" />
        <attr name="yx_multi_selector3" format="string" />
        <attr name="yx_multi_selector4" format="string" />
        <attr name="yx_multi_selector5" format="string" />
        <attr name="yx_multi_selector6" format="string" />
    </declare-styleable>

    <declare-styleable name="background_multi_selector_text">
        <attr name="yx_multi_text_selector1" format="string" />
        <attr name="yx_multi_text_selector2" format="string" />
        <attr name="yx_multi_text_selector3" format="string" />
        <attr name="yx_multi_text_selector4" format="string" />
        <attr name="yx_multi_text_selector5" format="string" />
        <attr name="yx_multi_text_selector6" format="string" />
    </declare-styleable>

    <declare-styleable name="background_button_drawable">
        <attr name="yx_checked_button_drawable" format="color|reference" />
        <attr name="yx_unChecked_button_drawable" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="text_selector">
        <attr name="yx_checkable_textColor" format="color" />
        <attr name="yx_checked_textColor" format="color" />
        <attr name="yx_enabled_textColor" format="color" />
        <attr name="yx_selected_textColor" format="color" />
        <attr name="yx_pressed_textColor" format="color" />
        <attr name="yx_focused_textColor" format="color" />
        <attr name="yx_activated_textColor" format="color" />
        <attr name="yx_active_textColor" format="color" />
        <attr name="yx_expanded_textColor" format="color" />

        <attr name="yx_unCheckable_textColor" format="color" />
        <attr name="yx_unChecked_textColor" format="color" />
        <attr name="yx_unEnabled_textColor" format="color" />
        <attr name="yx_unSelected_textColor" format="color" />
        <attr name="yx_unPressed_textColor" format="color" />
        <attr name="yx_unFocused_textColor" format="color" />
        <attr name="yx_unActivated_textColor" format="color" />
        <attr name="yx_unActive_textColor" format="color" />
        <attr name="yx_unExpanded_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="yx_other">
        <attr name="yx_position" format="enum">
            <enum name="left" value="2" />
            <enum name="top" value="4" />
            <enum name="right" value="8" />
            <enum name="bottom" value="16" />
        </attr>
    </declare-styleable>

</resources>